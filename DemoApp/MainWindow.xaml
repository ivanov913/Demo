<Window x:Class="DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="CPU Usage:" Grid.Column="0" Grid.Row="0"/>
        <Label Content="Ram Usage:" Grid.Column="0" Grid.Row="1"/>
        <Label Content="HDD Usage:" Grid.Column="0" Grid.Row="2"/>
        <Label Content="{Binding cpuUsage}" Grid.Column="1" Grid.Row="0"/>
        <Label Content="{Binding ramUsage}" Grid.Column="1" Grid.Row="1"/>
        <Label Content="{Binding hardDriveUsage}" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Window>
